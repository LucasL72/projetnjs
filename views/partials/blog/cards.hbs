<!--- Cards--->
<section class="famille-prod">
    <div class="container">
        <div class="row" id="listCard">
            {{#each dbarticles }}
            <div class="col-md-4">
                <div class="famille-details card">
                    <img class="card-img-top" src="/assets/data/articles/{{ this.imgarticle }}" alt="image article">
                    <div class="card-body">
                        <h3 class="card-title">{{this.title}}</h3>
                        <p class="card-text">{{this.description}}</p>
                        <div class="card-footer  bg-transparent">
                            <a href="blog/{{ title }}" class="btn btn-ghost">Voir l'article</a>
                        </div>
                        <p class="text-muted">Posté le {{{formatDate dateart "DD MMMM YYYY à HH:mm"}}} </p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>

    </div>
</section>