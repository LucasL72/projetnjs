<!-------------------Gest Messages---------------------------------------------->
<div class="accordion-item">
    <p class="accordion-header" id="panelsStayOpen-headingThree">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
            data-bs-target="#panelsStayOpen-collapseThree" aria-expanded="false"
            aria-controls="panelsStayOpen-collapseThree">
            Gestion Commentaires
        </button>
    </p>
    <div id="panelsStayOpen-collapseThree" class="accordion-collapse collapse"
        aria-labelledby="panelsStayOpen-headingThree">
        <div class="accordion-body">

            <!------------------- 1er Article------------------>
            <h2>Tous les Commentaires</h2>
            {{#each dbcommentaires}}
            <section>
                <div class="container">
                    <div class="row">

                        <div class="col-md-12">
                            <div class="client-profil position-relative">

                                <cite> <img src="/assets/data/users/{{ this.imguser }}">

                                    {{ this.pseudouser }}</cite>
                                <blockquote>

                                    {{ this.content }}
                                    <!------ Button trigger modal --------->
                                    <button class="btn-danger" type="button" data-bs-toggle="modal"
                                        data-bs-target="#MessModal{{ this.idcommentaire }} "><i
                                            class="fas fa-trash-alt "></i></button>
                                    {{> modals/modalsupprcoms }}
                                </blockquote>
                                <p class="text-muted">Posté le {{{formatDate datecom "DD MMMM YYYY à HH:mm"}}} </p>
                            </div>

                        </div>


                    </div>
                </div>

            </section>

            {{/each}}


        </div>
    </div>
</div>