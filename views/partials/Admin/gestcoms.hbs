{{!--
Partial : Admin/ Gestion commentaires
--}}

<!-------------------Gest Messages---------------------------------------------->
<div class="accordion-item">
    <p class="accordion-header" id="panelsStayOpen-headingThree">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
            data-bs-target="#panelsStayOpen-collapseThree" aria-expanded="false"
            aria-controls="panelsStayOpen-collapseThree">
            Gestion Commentaires
        </button>
    </p>
    <div id="panelsStayOpen-collapseThree" class="accordion-collapse collapse"
        aria-labelledby="panelsStayOpen-headingThree">
        <div class="accordion-body">

            <!------------------- 1er Article------------------>
            <h2>1er Article</h2>

            <!-------------------Add Comms---------------------------------------------->
            <div class="col-md-12">
                <!-------------------Button Modal Comms---------------------------------------------->
                <h3><button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ComsModal">
                        Add Comment
                    </button></h3>

                {{> modals/modaladdcoms }}

            </div>

            <!-------------------Commentaires---------------------------------------------->
            <section>
                <div class="container">
                    <div class="row">
                        {{#each dbcommentaires }}
                        <div class="col-md-12">
                            <div class="client-profil position-relative">
                                <cite> <img src="/assets/images/blaise.jpg"> {{ this.pseudouser }}</cite>
                                <blockquote>

                                   {{ this.content }}
                                    <!------ Button trigger modal --------->
                                    <button class="btn-danger" type="button" data-bs-toggle="modal"
                                        data-bs-target="#MessModal"><i class="fas fa-trash-alt "></i></button>
                                </blockquote>
                            </div>

                        </div>
                        {{/each}}
                    </div>
                </div>

            </section>
        </div>
        <!------------------- 2ème Article------------------>

        <h2>2ème Article</h2>
        <div class="col-md-12">
            <!-------------------Button Modal Comms---------------------------------------------->
            <h3><button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ComsModal">
                    Add Comment
                </button></h3>
        </div>

        {{> modals/modalsupprcoms }}

    </div>
</div>