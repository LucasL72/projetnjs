<!---=======Gest User========-->
<div class="accordion-item">
    <p class="accordion-header" id="panelsStayOpen-headingOne">
        <button class="accordion-button" type="button" data-bs-toggle="collapse"
            data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true"
            aria-controls="panelsStayOpen-collapseOne">
            Gestion Utilisateurs
        </button>
    </p>
    <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show"
        aria-labelledby="panelsStayOpen-headingOne">
        <div class="accordion-body table-responsive">
            <!-- Button trigger modal Gestin users -->


            <table class="table table-success table-striped container">
                <thead>
                    <tr>
                        <th scope="col-xs-2" class="text-center"> Statut compte</th>
                        <th scope="col-xs-2" class="text-center">Image de Profil</th>
                        <th scope="col-xs-2" class="text-center">User Name</th>
                        <th scope="col-xs-2" class="text-center">Name</th>
                        <th scope="col-xs-2" class="text-center">First Name</th>
                        <th scope="col-xs-2" class="text-center">Email</th>
                        <th scope="col-xs-2" class="text-center">GÃ©rer profil</th>


                    </tr>
                </thead>
                <tbody>
                    {{#each dbuser }}
                    <tr>
                        <td class="text-center">{{#if this.isBan }}<div class="text-danger text-center"><i
                                    class="fas fa-user-times"></i></div>{{/if
                            }}{{#unless this.isBan}}<div class="text-success text-center"><i
                                    class="fas fa-user-check"></i></div>
                            {{/unless }}</td>
                        <td class="text-center"><img class="img-user rounded" src="/assets/data/users/{{ this.imguser }}" alt="image de profile"> </td>
                        <td class="text-center">{{ this.pseudo }}</td>
                        <td class="text-center">{{ this.firstname }}</td>
                        <td class="text-center">{{ this.name }}</td>
                        <td class="text-center">{{ this.email }}</td>
                        <td class="text-center" scope="col-xs-2">
                            <a data-bs-toggle="modal" data-bs-target="#GestModal{{ this.id }}" class="btn"> <i
                                    class="fas fa-tools"></i></a>
                            <a class="text-danger" data-bs-toggle="modal" data-bs-target="#DelUser{{ this.id }}"
                                type="submit"><i class="fas fa-trash-alt "></i>
                            </a>
                            <a class="text-danger" data-bs-toggle="modal" data-bs-target="#BanUser{{ this.id }}"
                                type="submit"><i class="fas fa-ban"></i>
                            </a>
                            <a class="text-success" data-bs-toggle="modal" data-bs-target="#UnBanUser{{ this.id }}"
                                type="submit"><i class="fas fa-ban"></i>
                            </a>

                            </form>
                        </td>

                    </tr>
                    {{> modals/modalsuppruser }}
                    {{> modals/modalgestuser }}
                    {{> modals/modalunbanuser }}
                    {{> modals/ modalbanuser }}
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>




</div>