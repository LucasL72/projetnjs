<!-----------Gestion Photos----------------------------------->
<div class="accordion-item">
    <p class="accordion-header" id="panelsStayOpen-headingfour">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
            data-bs-target="#panelsStayOpen-collapsefour" aria-expanded="false"
            aria-controls="panelsStayOpen-collapsefour">
            Gestion Photos
        </button>
    </p>
    <div id="panelsStayOpen-collapsefour" class="accordion-collapse collapse"
        aria-labelledby="panelsStayOpen-headingfour">
        <!-----------Photos----------------------------------->
        <div class="accordion-body">
            <h3><button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#picsModal">
                    Add pics
                </button></h3>
            <!-------------------------- 1ère rangée----------------------------------->
            <div class="row">
                {{#each dbpics }}

                <div class="col-md-4">
                    <div class="galeries-img"
                        style="background-image: url(/assets/data/photos/{{ this.photo }});">
                        <div class="text-white">
                            <p class="fst-italic text-white position-absolute bottom-0 end-0"><i
                                    class="fas fa-camera"></i>
                                {{ this.authorname }}</p>
                        </div>
                        <div class=" position-absolute top-0 end-0 ">
                            <button class=" btn btn-danger" type="submit" data-bs-toggle="modal"
                                data-bs-target="#DelPics{{ this.idphotos }}" name="Deletepic">Delete</button>
                        </div>
                    </div>
                </div>
                {{> modals/modalsupprpic }}
                {{/each}}

            </div>
        </div>
    </div>

    {{> modals/modaladdpics }}


</div>