<!--- Contact--->

<section class="theme-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form">
                            <h2>Contactez-nous</h2>
                            <p>Vous Pourrez ici envoyer un message directement à l'administration du site ou à l'association</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="phone">
                            <p><i class="fas fa-phone"></i> 02.00.00.00.00</p>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="adress">
                            <p><i class="fas fa-map-marker-alt"></i> Adresse 72450 Montfort-le-Gesnois
                            </p>
                        </div>
                    </div>

                </div>
                <!--Create Message--->
                <form action="/" method="post">
                    <!--- Nom & Email- -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="contact-form">
                                <label class="form-label">Nom:</label>
                                <input name="author" type="text" class="form-control" placeholder="Ajouter votre Nom" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="contact-form">
                                <label class="form-label">Email:</label>
                                <input name="email" class="form-control" type="email" id="email" placeholder="Ajouter votre email" />
                            </div>
                        </div>
                    </div>
        
                    <!---Message--->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="contact-form">
                                <label for="mess"class="form-label">Votre message:</label>
                                <textarea  id="mess"name="content" rows="3" class="contact-message form-control"> </textarea>
                            </div>
                        </div>
                    </div>
                    <!--- Bouton -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class=" contact-form d-grid gap-2 d-md-flex justify-content-md-center">
                                <button type="submit" class="btn btn-contact">Envoyer</button>
                            </div>

                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>