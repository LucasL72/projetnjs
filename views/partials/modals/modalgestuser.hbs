<!---------------------------- Modal users ------------------------------->
<div class="modal fade dark" id="GestModal{{ this.id}}" tabindex="-1" aria-labelledby="ModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalLabel"> GÃ©rer Profil
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/admin/user/{{ this.id }}/?_method=PUT" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label for="formFile" class="form-label">Photo
                                    de Profil</label>
                                <input name="imguser" class="form-control" type="file" id="formFile{{ this.id}}">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label for="firstname" class="form-label">Firstname</label>
                            <input name="firstname" type="text" class="form-control" id="firstname{{ this.id }}"
                                value="...">
                        </div>
                        <div class="col-md-6">
                            <label for="name" class="form-label">Name</label>
                            <input name="name" type="text" class="form-control" id="name{{ this.id}}" value="...">
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save
                            changes</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

                    </div>

                </div>
            </form>
        </div>
    </div>
</div>