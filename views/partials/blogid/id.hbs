{{!--
Partial : Id/Id product/article
--}}
<!---Id-->
<section>
    <div class="container">
        {{#each dbarticles}}
        <div class="col-md-12">
            <h2>{{ this.title }}</h2>
        </div>


        <div class="col-md-12 text-center">
            <img src="/assets/data/articles/{{ this.imgarticle }}" alt="image article" class="produit-img ">
        </div>

        <div class="col-md-12">
            <div class="produits-plus">
                <div class="row">
                    <div class="col-md-1">
                        <div class="produits-icon">
                            <i class="fab fa-readme"></i>
                        </div>
                    </div>
                    <div class="col-md-11">
                        <p> {{ this.contenu }}</p>
                        <p class="text-muted">Posté le {{{formatDate dateart "DD MMMM YYYY à HH:mm"}}}</p>

                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</section>