<!---Ajouter un commentaires--->
{{#if user}}
<div class="col-md-12 bg-com">
    <h5 class="text-center">Ajouter un commentaire</h5>
    <form action="/blog-id" method="post">
        <div class="input-group">
            <span class="input-group-text" id="inputGroupPrepend2">@</span>
            <input name="pseudouser" type="text" class="form-control" placeholder="{{ user.pseudo }}"
                aria-describedby="inputGroupPrepend2">
        </div>
        <label> Votre commentaire:</label>
        <div class="contact-form">
            <textarea name="content" rows="3" class="contact-message"> </textarea>
        </div>

        <!--- Bouton- -->
        <div class="row">
            <div class="col-md-12">
                <div class="contact-form -grid gap-2 d-md-flex justify-content-md-center ">
                    <button type="submit" class="btn btn-contact">Envoyer</button>
                </div>

            </div>
        </div>
    </form>

</div>
{{/if}}