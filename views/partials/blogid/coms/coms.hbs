<!---Commentaires-->
<section class="theme-com">
    <div class="container">

        <div class="col-md-12">
            <h2>Comments</h2>
        </div>

        {{#each dbcommentaires }}

        <div class="col-md-12">
            <div class="client-profil position-relative">
                {{#if user}}
                <cite> <img src="/assets/data/users/{{ user.imguser }}"> {{ user.pseudo }}</cite>
                {{/if}}
                <blockquote>
                    {{ this.content }}
                </blockquote>
            </div>


        </div>

        {{/each}}

        {{> blogid/coms/addcoms }}

    </div>
</section>