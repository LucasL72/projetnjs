<!---Contact--->
<section id="contact" class="theme-contact">
    <div class="container">
        <div class="row">

            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12">

                        <h2>Contactez-nous</h2>
                        <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Mollitia veritatis vel
                            consequatur
                            aspernatur voluptatem nisi eius omnis adipisci illum maiores odit magnam esse
                            deserunt, quo
                            voluptate et assumenda expedita iste?</p>

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="phone">
                            <p><i class="fas fa-phone"></i> 02.00.00.00.00</p>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="adress">
                            <p><i class="fas fa-map-marker-alt"></i> Adresse 72450 Montfort-le-Gesnois</p>
                        </div>
                    </div>

                </div>

                <!--Create Form-->
                <form action="/contact" method="post">
                    <!-- Nom & Email- -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="contact-form">
                                <label class="form-label">Nom:</label>
                                <input name="name" class="form-control" type="text" id="name"
                                    placeholder="Ajouter votre Nom" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="contact-form">
                                <label class="form-label">Email:</label>
                                <input name="email" class="form-control" type="email" id="email"
                                    placeholder="Ajouter votre email" />
                            </div>
                        </div>
                    </div>

                    <!---Message--->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="contact-form">
                                <label class="form-label">Votre message:</label>
                                <textarea name="message" rows="3" class="contact-message form-control"> </textarea>
                            </div>
                        </div>
                    </div>
                    <!--- Bouton- -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="contact-form d-grid gap-2 d-md-flex justify-content-md-center">
                                <button type="submit" class="btn btn-contact">Envoyer</button>
                            </div>

                        </div>
                    </div>

                </form>
            </div>
            <div class="col-md-6">
                <div class="map">
                    <iframe
                        src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d5334.39230108232!2d0.41657408200073215!3d48.04855034446992!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e2f67876ed1b51%3A0xbfd7682136aff8b8!2sMairie%20de%20Montfort-le-Gesnois!5e0!3m2!1sfr!2sfr!4v1636715594871!5m2!1sfr!2sfr"
                        width="600" height="450" allowfullscreen="" loading="lazy"></iframe>
                </div>
            </div>

        </div>
    </div>
</section>